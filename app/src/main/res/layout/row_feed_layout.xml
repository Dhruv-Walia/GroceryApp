<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_item_layout"
        android:clickable="true"
        android:elevation="@dimen/padding_5dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:paddingTop="@dimen/padding_5dp"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardElevation="@dimen/margin_10dp"
        app:cardMaxElevation="@dimen/margin_10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <!--grid items for RecyclerView-->
        <RelativeLayout
            android:id="@+id/card_rl_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#a18f8f"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:text="Product Name :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />


            <TextView
                android:id="@+id/product_pck"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:text="Packaged Type :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/product_weight"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_pck"
                android:text="Product Weight :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />


            <TextView
                android:id="@+id/product_orig_price"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_weight"
                android:text="@string/product_price"
                android:textColor="#847373"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/product_discount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_orig_price"
                android:text="RS 75"
                android:textColor="#e10c21"
                android:textSize="@dimen/text_size_amount" />

            <in.vibescom.groceryapp.UI.Views.SFDLTextView
                android:id="@+id/tv_discounted_tag"
                android:layout_width="110dp"
                android:layout_height="@dimen/margin_20dp"
                android:background="@null"
                android:gravity="center"
                android:text="6.25% OFF"
                android:textColor="@color/red_button_color"
                android:textSize="@dimen/margin_15dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/product_pck"
                android:layout_alignEnd="@+id/image">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="@dimen/margin_30dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/canvas_box_corner_grey"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <in.vibescom.groceryapp.UI.Views.SFDRButton
                        android:id="@+id/btn_decrease"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="-"
                        android:textColor="@color/color_out_of_stock"
                        android:textSize="@dimen/add_btn_text_size"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_normal" />

                    <in.vibescom.groceryapp.UI.Views.SFDRTextView
                        android:id="@+id/tv_quantityCounts"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/product_name_text_color"
                        android:textSize="@dimen/title_text_size" />


                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/text_color_normal" />


                    <in.vibescom.groceryapp.UI.Views.SFDRButton
                        android:id="@+id/btn_increase"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="+"
                        android:textColor="@color/color_out_of_stock"
                        android:textSize="@dimen/add_btn_text_size"
                        android:textStyle="bold" />

                </LinearLayout>


            </RelativeLayout>

            <in.vibescom.groceryapp.UI.Views.SFDRButton
                android:id="@+id/btn_card_add"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_alignBaseline="@+id/product_orig_price"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="63dp"
                android:background="@drawable/canvas_feed_btn"
                android:text="ADD"
                android:textColor="@color/red_button_color" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/card_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_size"
        android:layout_below="@+id/card_view"
        android:background="@color/divider_color" />

</RelativeLayout>