<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_item_layout"
        android:elevation="@dimen/padding_5dp"
        android:padding="5dp"
        android:paddingBottom="@dimen/padding_5dp"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingRight="@dimen/padding_5dp"
        android:paddingTop="@dimen/padding_5dp"
        app:cardCornerRadius="@dimen/padding_5dp"
        app:cardElevation="@dimen/margin_10dp"
        app:cardMaxElevation="@dimen/margin_10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">
        <!--
    grid items for RecyclerView
    -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#a18f8f"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/product_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:text="Product Name :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/product_desc"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:text="Product Description :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/product_wght"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_desc"
                android:text="Product Weight :"
                android:textColor="#000"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/product_orig_price"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_wght"
                android:text="@string/product_price"
                android:textColor="#847373"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/product_discount_price"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_orig_price"
                android:text="RS 75"
                android:textColor="#e10c21"
                android:textSize="@dimen/text_size_amount" />

            <Button
                android:id="@+id/btn_card_add"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_alignBottom="@+id/product_wght"
                android:layout_alignParentEnd="true"
                android:background="@drawable/my_feed_btn"
                android:nextFocusRight="@id/product_name"
                android:text="ADD"
                android:textColor="#FFF"
                android:textSize="15dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>