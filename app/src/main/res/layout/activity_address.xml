<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearlay1"
    tools:context=".UI.Activities.AddressActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_sector"
            android:hint="Enter Your Sector"
            android:inputType="number"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#000000" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_locality"
            android:hint="Enter Your Locality"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#000000" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_tower"
            android:hint="Enter Your Locality"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#000000" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_flat_no"
            android:hint="Enter Your Locality"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_normal"
            android:textColor="#000000" />

    </android.support.design.widget.TextInputLayout>


</LinearLayout>