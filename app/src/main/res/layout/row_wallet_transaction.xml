<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <in.vibescom.groceryapp.UI.Views.SFDRTextView
            android:id="@+id/tv_wallet_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wallet Transaction - 1205445"
            android:textColor="@color/text_color_regular"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_xlarge"/>

        <in.vibescom.groceryapp.UI.Views.SFDRTextView
            android:id="@+id/tv_wallet_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="23:45 PM, 21 Jul 2018"
            android:textColor="@color/text_color_lite"
            android:textSize="@dimen/text_size_large"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <in.vibescom.groceryapp.UI.Views.SFDRTextView
            android:id="@+id/tv_wallet_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/text_color_lite"
            android:textSize="@dimen/text_size_xxlarge"/>

        <in.vibescom.groceryapp.UI.Views.SFDRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:text="@string/Rs"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_xxlarge"/>
        <in.vibescom.groceryapp.UI.Views.SFDRTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5dp"
            android:text="400"
            android:textColor="@color/black_color"
            android:textSize="@dimen/text_size_xxlarge"/>
    </LinearLayout>


</RelativeLayout>