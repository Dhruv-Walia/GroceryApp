<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@drawable/canvas_progressdialog</item>
    </style>

    <style name="InputLayoutAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint_color_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="toolbarCartCountTextView">
        <item name="android:background">@drawable/canvas_circle_white_corner_red</item>
    </style>

    <style name="myProfileCartCountTextView">
        <item name="android:background">@drawable/canvas_circle_grey</item>
    </style>

    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color_regular</item>
        <item name="android:textColor">@color/text_color_regular</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="toolbarCartImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/COD</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_shopping_cart_red_24dp</item>
    </style>

</resources>
