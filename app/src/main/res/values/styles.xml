<resources>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:drawableStart">@drawable/ic_location_on_white_24</item>
        <item name="android:drawablePadding">@dimen/margin_20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_Input_hint_color</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="AppTheme.ColorWhite">
        <item name="colorError">@color/orderSummaryTextBack</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/red_button_color</item>
    </style>

    <style name="textInputLayout"  parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">13sp</item>
        <item name="colorControlNormal">#839191</item>

        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">#839191</item>
        //added attributes
        <item name="android:textCursorDrawable">@drawable/canvas_white_color_cursor</item>
        <item name="android:textColorHintInverse">#839191</item>
        <item name="colorControlActivated">@color/text_color_white</item>
        <item name="colorControlHighlight">@color/text_color_white</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">#839191</item>
        <item name="colorControlNormal">@color/text_color_white</item>
        <item name="colorControlActivated">@color/text_color_white</item>
        <item name="android:textColor">@color/text_Input_hint_color</item>
        <item name="colorControlHighlight">@color/text_color_white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColorSecondary">@color/window_background</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AlertDialog.Holo" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ProgressTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@drawable/canvas_progressdialog</item>
    </style>

    <style name="InputLayoutAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/hint_color_regular</item>
    </style>

    <style name="toolbarCartCountTextView">
        <item name="android:background">@drawable/canvas_circle_red</item>
    </style>

    <style name="myProfileCartCountTextView">
        <item name="android:background">@drawable/canvas_circle_grey</item>
    </style>

    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_edittext</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/hint_color_regular</item>
        <item name="android:textColor">@color/text_color_regular</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="toolbarCartImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/COD</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_shopping_cart_white</item>
    </style>

    <style name="toolbarRemoveCart" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/COD</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_remove_shopping_cart_white</item>
    </style>

    <style name="toolbarBackImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/COD</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_arrow_back_white</item>
    </style>

    

</resources>
